{
	"name": "vscode-notes",
	"displayName": "Notes",
	"description": "Notes is a Markdown focused notes extension for Visual Studio Code that takes inspiration from Notational Velocity and nvAlt.",
	"version": "1.2.3",
	"publisher": "dionmunk",
	"license": "CC-BY-NC-4.0",
	"author": {
		"name": "Dion Munk",
		"url": "https://github.com/dionmunk"
	},
	"keywords": [
		"notes",
		"notational velocity",
		"nvalt"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/dionmunk/vscode-notes"
	},
	"homepage": "https://github.com/dionmunk/vscode-notes#readme",
	"bugs": {
		"url": "https://github.com/dionmunk/vscode-notes/issues"
	},
	"icon": "resources/icon.png",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Notes",
			"properties": {
				"notes.notesLocation": {
					"type": "string",
					"default": "",
					"description": "Storage location for notes."
				},
				"notes.notesDefaultNoteExtension": {
					"type": "string",
					"default": "md",
					"description": "The default extension to use for new notes. (do not include the dot)"
				},
				"notes.notesExtensions": {
					"type": "string",
					"default": "*",
					"description": "A comma separated list of allowed extensions for notes. Use '*' to allow all file types. (do not include the dot or spaces)"
				}
			}
		},
		"commands": [
			{
				"command": "Notes.deleteNote",
				"title": "Delete Note",
				"icon": {
					"light": "resources/light/delete.svg",
					"dark": "resources/dark/delete.svg"
				}
			},
			{
				"command": "Notes.deleteFolder",
				"title": "Delete Folder",
				"icon": {
					"light": "resources/light/delete.svg",
					"dark": "resources/dark/delete.svg"
				}
			},
			{
				"command": "Notes.listNotes",
				"title": "List Notes",
				"category": "Notes"
			},
			{
				"command": "Notes.newNote",
				"title": "New Note",
				"category": "Notes",
				"icon": "$(plus)"
			},
			{
				"command": "Notes.newFolder",
				"title": "New Folder",
				"category": "Notes",
				"icon": "$(folder)"
			},
			{
				"command": "Notes.refreshNotes",
				"title": "Refresh Notes",
				"category": "Notes",
				"icon": "$(refresh)"
			},
			{
				"command": "Notes.renameNote",
				"title": "Rename Note",
				"icon": {
					"light": "resources/light/rename.svg",
					"dark": "resources/dark/rename.svg"
				}
			},
			{
				"command": "Notes.renameFolder",
				"title": "Rename Folder",
				"icon": {
					"light": "resources/light/rename.svg",
					"dark": "resources/dark/rename.svg"
				}
			},
			{
				"command": "Notes.setupNotes",
				"title": "Select Storage Location",
				"category": "Notes",
				"icon": "$(gear)"
			}
		],
		"keybindings": [
			{
				"command": "Notes.listNotes",
				"key": "alt+l",
				"mac": "alt+l"
			},
			{
				"command": "Notes.newNote",
				"key": "alt+n",
				"mac": "alt+n"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "Notes.newNote",
					"when": "view == notes",
					"group": "navigation@1"
				},
				{
					"command": "Notes.newFolder",
					"when": "view == notes",
					"group": "navigation@2"
				},
				{
					"command": "Notes.refreshNotes",
					"when": "view == notes",
					"group": "navigation@3"
				},
				{
					"command": "Notes.setupNotes",
					"when": "view == notes",
					"group": "navigation@4"
				}
			],
			"view/item/context": [
				{
					"command": "Notes.renameNote",
					"when": "view == notes && viewItem == note",
					"group": "1_modification@1"
				},
				{
					"command": "Notes.deleteNote",
					"when": "view == notes && viewItem == note",
					"group": "1_modification@2"
				},
				{
					"command": "Notes.renameFolder",
					"when": "view == notes && viewItem == folder",
					"group": "1_modification@1"
				},
				{
					"command": "Notes.deleteFolder",
					"when": "view == notes && viewItem == folder",
					"group": "1_modification@2"
				},
				{
					"command": "Notes.newNote",
					"when": "view == notes && viewItem == folder",
					"group": "2_workspace@1"
				},
				{
					"command": "Notes.newFolder",
					"when": "view == notes && viewItem == folder",
					"group": "2_workspace@2"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vscode-notes",
					"title": "Notes",
					"icon": "resources/notes-light.svg"
				}
			]
		},
		"views": {
			"vscode-notes": [
				{
					"id": "notes",
					"name": "Notes"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "notes",
				"contents": "To get started, you need to select a location to store your notes.\n[Select Location](command:Notes.setupNotes)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"webpack": "NODE_OPTIONS=--openssl-legacy-provider webpack --mode development",
		"webpack-dev": "NODE_OPTIONS=--openssl-legacy-provider webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mkdirp": "^1.0.0",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/rimraf": "^3.0.0",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"ts-loader": "^6.2.2",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"vscode-uri": "^2.1.2"
	}
}